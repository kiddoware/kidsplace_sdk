<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="oval">
            <solid
                android:color="@color/colorAccent" />

            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>

    </item>

    <item >

        <shape android:shape="oval">
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent"/>
        </shape>

    </item>
</selector>